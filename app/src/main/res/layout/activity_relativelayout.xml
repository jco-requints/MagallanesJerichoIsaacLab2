<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".relativelayout">

    <Button
        android:id="@+id/next"
        android:layout_width="159dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/back"
        android:layout_marginEnd="18dp"
        android:layout_weight="1"
        android:text="Next" />

    <Button
        android:id="@+id/back"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="17dp"
        android:layout_marginStart="14dp"
        android:layout_weight="1"
        android:text="Back" />

    <TextView
        android:id="@+id/distance2"
        android:layout_width="307dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/distance_text"
        android:layout_marginStart="1dp"
        android:layout_toEndOf="@+id/distance_text"
        android:layout_weight="1"
        android:gravity="center"
        android:text="34.5km via Metro Manila Skyway and S Luzon Expy/OsmeÃ±a Hwy/Pan-Philippine Hwy/R-3"
        android:textSize="12sp"
        android:typeface="sans"
        app:fontFamily="serif" />

    <TextView
        android:id="@+id/distance_text"
        android:layout_width="77dp"
        android:layout_height="74dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/location_text2"
        android:layout_weight="1"
        android:gravity="center"
        android:text="Distance from UST"
        android:typeface="sans"
        app:fontFamily="serif" />

    <TextView
        android:id="@+id/location2"
        android:layout_width="289dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/location_text2"
        android:layout_alignParentEnd="true"
        android:layout_weight="1"
        android:gravity="center"
        android:text="SLEX Southwoods | Laguna, Binan City, Luzon, Philippines"
        android:textSize="12sp"
        android:typeface="sans"
        app:fontFamily="serif" />

    <TextView
        android:id="@+id/location_text2"
        android:layout_width="80dp"
        android:layout_height="57dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView"
        android:layout_weight="1"
        android:gravity="center"
        android:text="Location"
        android:typeface="sans"
        app:fontFamily="serif" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="249dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/splash" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:text="Splash Island"
        android:textSize="18sp"
        android:typeface="sans"
        app:fontFamily="serif" />
</RelativeLayout>